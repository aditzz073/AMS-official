# Environment Variables for Production

# CRITICAL: Generate a new strong JWT_SECRET for production
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# Example: 80e2e68083746f3307a78d23a0a56867b02b691c736d34405e25269f79fc7335d56a7f65b26f2912745a2b8bc1c7dc7de700f48446f11ca925fb6698b74df4b4
JWT_SECRET=REPLACE_WITH_YOUR_GENERATED_STRONG_SECRET_128_CHARS

# Server Configuration
PORT=9000
NODE_ENV=production

# Database (Replace with production MongoDB URL)
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/production_db

# CORS (Replace with your production frontend URL)
CLIENT_URL=https://your-production-domain.com

# Cloudinary Configuration (Required for file uploads)
CLOUDINARY_NAME=your_cloudinary_cloud_name
CLOUDINARY_KEY=your_cloudinary_api_key
CLOUDINARY_SECRET=your_cloudinary_api_secret

# SMTP Configuration (Use production email service)
# Consider using SendGrid, AWS SES, or dedicated SMTP service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-production-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Security Settings
# Token expiry in hours (consider shorter for admin: 2h, regular users: 6h)
TOKEN_EXPIRY_HOURS=6
ADMIN_TOKEN_EXPIRY_HOURS=2

# Rate Limiting (optional override, defaults set in middleware)
# LOGIN_RATE_LIMIT=5
# API_RATE_LIMIT=100
# OTP_RATE_LIMIT=3
